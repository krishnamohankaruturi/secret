<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="edu.ku.cete.model.GradeDao">
    
    <sql id="select">
        SELECT id, grade, description
    </sql>
    
    <select id="findByGrade" resultType="Grade" parameterType="int">
        <include refid="select"/>
        FROM grade
        WHERE grade = #{grade}
    </select>
    
    <select id="getAll" resultType="Grade">
        <include refid="select"/>
        FROM grade
    </select>
</mapper>